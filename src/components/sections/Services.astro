---
import Service from '../cards/Service.astro'
import Container from '../shared/Container.astro'
import Title from '../shared/Title.astro'
import { services } from '../../utils/data.ts'

type ServicesProps = {
  title: string
  features: string[]
  icon: string
}

export interface Props {
  className?: string
}

const { className } = Astro.props
---

<!-- <section
  id="services"
  class=`relative bg-gradient-to-br from-blue-100 to-sky-200 dark:from-indigo-800 dark:to-green-950  ${className}`
> -->
<section
  id="services"
  class=`relative  dark:bg-gradient-to-br dark:from-indigo-800 dark:to-green-950  ${className}`
>
  <span
    class="via-primary dark:via-primary absolute bottom-1/3 left-1/3 h-40 w-40 rounded-full bg-gradient-to-br from-sky-200 from-0% via-80% to-green-400 to-110% dark:from-sky-500 dark:to-green-600"
  ></span>
  <span
    class="to-primary dark:to-primary absolute right-1/4 bottom-0 h-40 w-40 rounded-full bg-gradient-to-br from-yellow-200 from-0% via-sky-500 via-85% to-100% dark:from-yellow-400 dark:via-sky-700"
  ></span>
  <span
    class="via-primary dark:via-primary absolute top-1/3 right-1/3 h-40 w-40 rounded-full bg-gradient-to-br from-green-300 from-0% via-80% to-sky-400 to-110% dark:from-green-500 dark:to-sky-600"
  ></span>

  <span
    class="via-primary dark:via-primary absolute top-1/3 right-3/4 h-40 w-40 rounded-full bg-gradient-to-br from-green-300 from-0% via-80% to-sky-400 to-110% dark:from-green-500 dark:to-sky-600"
  ></span>
  <Container className="md:sapce-y-12 space-y-10">
    <div class="mx-auto max-w-3xl space-y-4 text-center">
      <Title className="">Why Choose Unitech Builder?</Title>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 lg:gap-8">
      {
        services.map((service: ServicesProps) => {
          return (
            <Service
              title={service.title}
              features={service.features}
              icon={service.icon}
            />
          )
        })
      }
    </div>
  </Container>
</section>
